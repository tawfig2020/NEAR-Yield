# API Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Security
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=100
SESSION_TIMEOUT=3600

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# NEAR Network
NEAR_ENV=testnet
NEAR_NETWORK_ID=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org
NEAR_WALLET_URL=https://wallet.testnet.near.org
NEAR_HELPER_URL=https://helper.testnet.near.org
NEAR_EXPLORER_URL=https://explorer.testnet.near.org
CONTRACT_NAME=your-contract-name.testnet

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=near_yield
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL=false
REDIS_TIMEOUT=5000

# AI/ML Services
GEMINI_API_KEY=your-gemini-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
PROMETHEUS_ENABLED=true

# Alert Configuration
ALERT_EMAIL=alerts@yourcompany.com

# Alert Channels Configuration
# Discord
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_ALERT_CHANNEL_ID=your-channel-id

# Slack
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#alerts
SLACK_BOT_NAME=AlertBot

# Email (SMTP) Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ALERT_EMAIL_FROM=alerts@neardeepyield.com
ALERT_EMAIL_TO=team@neardeepyield.com

# Alert Settings
ALERT_SEVERITY_LEVELS=info,warning,error,critical
ALERT_RATE_LIMIT=60 # Minimum seconds between similar alerts

# Security Thresholds
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_DURATION=15
TRANSACTION_ALERT_THRESHOLD=1000000
SUSPICIOUS_IP_THRESHOLD=100

# Data Sources APIs
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=60

# Update Intervals (in milliseconds)
UPDATE_INTERVAL_PRICES=60000
UPDATE_INTERVAL_TVL=300000
UPDATE_INTERVAL_APY=300000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WEBSOCKET_URL=ws://localhost:3000
